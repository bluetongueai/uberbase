#!/bin/bash

mkdir -p ./configs/authelia
interpolator ./authelia/config.template.yml > ./configs/authelia/config.yml
mkdir -p ./configs/caddy
interpolator ./caddy/Caddyfile.template > ./configs/caddy/Caddyfile
mkdir -p ./configs/lldap
interpolator ./lldap/lldap_config.template.toml > ./configs/lldap/config.toml
mkdir -p ./configs/postgrest
interpolator ./postgrest/postgrest.template.conf > ./configs/postgrest/postgrest.conf
