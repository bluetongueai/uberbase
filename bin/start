#! /bin/bash

echo ""
echo "  __  _____  _______  ___  ___   ________"
echo " / / / / _ )/ __/ _ \/ _ )/ _ | / __/ __/"
echo "/ /_/ / _  / _// , _/ _  / __ |_\ \/ _/"  
echo "\____/____/___/_/|_/____/_/ |_/___/___/"  
echo ""
echo ""

platform=$(uname -m)
echo -e "Starting \033[33muberbase\033[0m..."
export UBERBASE_PLATFORM="`arch | sed s/arm64/aarch64/ | sed s/amd64/x86_64/`"
echo -e "Starting on \033[33m$UBERBASE_PLATFORM\033[0m"

./bin/configure

if [ "$UBERBASE_ENABLE_POSTGRES" = true ] || [ "$UBERBASE_ENABLE_FUSIONAUTH" = true ] || [ "$UBERBASE_ENABLE_POSTGREST" = true ]; then
    ./bin/build/postgres
fi

if [ "$UBERBASE_ENABLE_REDIS" = true ]; then
    ./bin/build/redis
fi

if [ "$UBERBASE_ENABLE_MINIO" = true ]; then
    ./bin/build/minio
fi

if [ "$UBERBASE_ENABLE_FUSIONAUTH" = true ]; then
    ./bin/build/fusionauth
fi

if [ "$UBERBASE_ENABLE_POSTGREST" = true ]; then
    ./bin/build/postgrest
fi

./bin/run/vault
./bin/run/registry

if [ "$UBERBASE_ENABLE_POSTGRES" = true ] || [ "$UBERBASE_ENABLE_FUSIONAUTH" = true ] || [ "$UBERBASE_ENABLE_POSTGREST" = true ]; then
    ./bin/run/postgres
fi

if [ "$UBERBASE_ENABLE_FUSIONAUTH" = true ]; then
    ./bin/run/fusionauth
fi

if [ "$UBERBASE_ENABLE_REDIS" = true ]; then
    ./bin/run/redis
fi

if [ "$UBERBASE_ENABLE_MINIO" = true ]; then
    ./bin/run/minio
fi

if [ "$UBERBASE_ENABLE_POSTGREST" = true ]; then
    sleep 5
    ./bin/run/postgrest
fi

./bin/run/traefik

if [ "$UBERBASE_ENABLE_FUNCTIONS" = true ]; then
    ./bin/uberbase serve ./_configs/functions/config.json
fi
