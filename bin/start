#!/bin/bash

cd /uberbase

# start uberbase
./bin/configure
docker-compose up -d 

# start 

# start flintlock
cd /flintlock
export NET_DEVICE=$(ip route show | awk '/default/ {print $5}')
./bin/flintlockd run \
    --containerd-socket=/run/containerd-dev/containerd.sock \
    --parent-iface="${NET_DEVICE}" \
    --insecure
