#! /bin/bash

./bin/configure

#podman run -it --rm \
docker run -it --rm \
  -v /home/podman/kamal:/workdir \
  -v "${PWD}/configs/kamal:/workdir/config" \
  -v "${SSH_AUTH_SOCK}:/ssh-agent" \
  -v /var/run/podman/podman.sock:/var/run/docker.sock \
  -e "SSH_AUTH_SOCK=/ssh-agent" \
  ghcr.io/basecamp/kamal:latest $@
