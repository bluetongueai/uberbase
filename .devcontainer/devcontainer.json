  "mounts": [
    "source=/dev,destination=/dev,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot-chat",
        "GitHub.copilot"
      ]
    }
  }
