{
	"name": "Uberbase Dev",
	"build": {
		"dockerfile": "../Dockerfile",
		"target": "uberbase-dev"
	},
	"runArgs": [
		"--security-opt",
		"seccomp=unconfined",
		"--device",
		"/dev/fuse",
		"--device",
		"/dev/net/tun",
		"--cap-add",
		"MKNOD",
		"--cap-add",
		"SYS_ADMIN",
		"--cap-add",
		"NET_ADMIN",
		"--cap-add",
		"SETUID",
		"--cap-add",
		"SETGID"
	],
	"mounts": [
		{
			"type": "volume",
			"source": "uberbase_dev_data",
			"target": "/home/podman/app/data"
		},
		{
			"type": "volume",
			"source": "podman_data",
			"target": "/var/lib/podman"
		}
	],
	"workspaceFolder": "/home/podman/app",
	"remoteUser": "podman"
}
